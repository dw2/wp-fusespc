section.stories
    font-size: 0
    overflow: hidden
    padding: 60px 0
    position: relative
    text-align: left

    > p
        font-size: 20px

    .story
        display: inline-block
        font-size: 20px
        margin-bottom: 60px
        text-align: center
        vertical-align: top
        cite
            color: #1bc0e3
            display: block
            font-size: 2em
            margin: 0 auto
            text-transform: uppercase
        img
            display: block
            margin: 0 auto
            width: 300px
        .about
            background: #0e4e5c
            border_radius(150px)
            color: #fff
            height: 200px
            margin: -60px auto 0
            padding: 50px
            position: relative
            width: 200px
            z-index: 2
            dfn
                color: #1bc0e3
                display: block
                font-size: 1.5em
                line-height: 1em
            q
                display: block
                font-size: 1.2em
                line-height: 1em
                margin-top: 1em
                &:before,
                &:after
                    display: inline-block
                    font-size: .5em
                    margin: -.25em .5em 0
                    vertical-align: top
                &:before
                    content: '\f10d'
                &:after
                    content: '\f10e'
        .more
            background: #ffe556
            border_radius(50px)
            color: #0e4e5c
            display: block
            font-size: 18px
            font-weight: 600
            height: 36px
            line-height: 18px
            margin: -50px auto 0
            padding: 32px 0
            position: relative
            text-decoration: none
            width: 100px
            z-index: 3
            &:hover,
            &:focus
                background: #FFEF95
        .viewall
            background: #95b1b6
            border_radius(150px)
            color: #fff
            display: block
            font-size: 2em
            height: 300px
            line-height: 300px
            margin: -60px auto 0
            position: relative
            text-decoration: none
            transition(letter-spacing .2s linear)
            width: 300px
            z-index: 2
            &:hover,
            &:focus
                background: #8fb5bb
                letter-spacing: 3px

    &.limited
        text-align: center
        white-space: nowrap
        .story
            margin-bottom: 0
            max-width: 400px
            white-space: normal
            width: 33.33%
            cite
                margin-bottom: .5em

@media screen and (min-width: 800px)
    section.stories .wrapper .story
        width: 33.33%

@media screen and (min-width: 540px) and (max-width: 999px)
    section.stories
        .story
            font-size: 16px
            img
                width: 250px
            .about
                padding: 40px
                height: 170px
                width: 170px

@media screen and (min-width: 540px) and (max-width: 799px)
    section.stories
        .story
            width: 50% !important
        &.limited .story3
            display: none

@media screen and (max-width: 539px)
    section.stories
        text-align: center
        white-space: normal !important
        .story
            width: 100% !important
            cite
                margin-bottom: 0
        .story ~ .story
            margin-top: 60px
