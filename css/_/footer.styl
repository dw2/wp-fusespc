footer
    font-size: .8em
    line-height: 60px
    min-height: 120px
    select(none)

    .branding
        display: block
        image_optimize()
        position: absolute
        img
            display: block
            height: 80px
            width: 245px

    .legal
        text-transform: uppercase
        a
            margin: 0 0 0 1em
            text-decoration: underline
            &:hover,
            &:focus
                color: #FFE25F

@media screen and (min-width: 800px)
    footer
        .branding
            left: 20px
            top: 20px
        .legal
            position: absolute
            right: 20px
            top: 30px

@media screen and (max-width: 799px)
    footer
        .branding
            left: 50%
            margin-left: -128px
            top: 60px
        .legal
            padding-top: 180px
            text-transform: none
            a
                margin: 0 0 0 .5em
