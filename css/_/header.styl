header
    background: #fff
    box_shadow(0 0 3em rgba(#000, .1))
    height: 120px
    position: relative
    select(none)
    z-index: 3

    .branding
        display: block
        image_optimize()
        left: 20px
        position: absolute
        top: 20px
        z-index: 2
        img
            display: block
            height: 80px
            width: 245px

    nav
        position: absolute
        z-index: 1
        a
            text-transform: uppercase
        > ul
            display: inline
        > ul > li
            display: inline-block
            position: relative
        > ul > li > a
            padding: 0 .75em


@media screen and (min-width: 840px)
    header nav
        line-height: 60px
        right: 5px
        top: 30px
        > ul > li > a
            color: #1bc0e3
            display: inline-block
            font-weight: 600
            vertical-align: center
            &:hover,
            &:focus
                color: #135d6d
        ul ul
            background: #135d6d
            display: block
            left: -2em
            position: absolute
            right: -2em
            top: -999em
            &:before
                border: .4em solid transparent
                border-bottom-color: #135d6d
                bottom: 100%
                content: ''
                left: 50%
                margin-left: -.4em
                position: absolute
            li
                line-height: 1em
            a
                color: #fff
                display: block
                line-height: 1em
                padding: 0 1em
                transition(padding .2s linear)
                &:hover
                    background: #0a404c
                    color: #fff
        li:hover
            > a
                color: #135d6d
            ul
                top: 100%
                a
                    padding: .75em 1em

@media screen and (max-width: 839px)
    header nav
        padding: 120px 0 0
        left: 0
        right: 0
        top: 0
        &:before
            color: #1bc0e3
            content: '\f0c9'
            cursor: pointer
            font-size: 60px
            line-height: 120px
            position: absolute
            right: 0
            text-align: center
            top: 0
            width: 90px
        &:after
            color: #1bc0e3
            content: 'Menu'
            cursor: pointer
            font: 20px Dosis, sans-serif
            -webkit-font-smoothing: auto
            font-weight: 600
            line-height: 120px
            position: absolute
            right: 90px
            text-transform: uppercase
            top: 0
        li
            display: block !important
        a
            background: #0e4e5c
            border-bottom: 1px solid rgba(#000,.2)
            color: #fff
            display: none
            padding: .75em 1em !important
            position: absolute
            transition(padding .2s linear)
            top: -999em
            &:hover,
            &:focus
                background: #0a404c
                color: #fff
    body.menuOpen
        header
            &:after
                background: #135d6d
                background: rgba(#042229,.7)
                bottom: 0
                content: ''
                left: 0
                position: fixed
                right: 0
                top: 120px  
            nav > ul > li > a,
            nav ul ul a
                display: block !important
                position: static !important
        article,
        footer
            filter(blur(2px))

@media screen and (max-width: 479px)
    header nav:after
        display: none
